<odoo>

    <!-- ====== ACTION ====== -->
    <record id="action_chauffeur" model="ir.actions.act_window">
        <field name="name">Chauffeurs</field>
        <field name="res_model">transport.chauffeur</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- ====== VUE LISTE ====== -->
    <record id="view_chauffeur_tree" model="ir.ui.view">
        <field name="name">transport.chauffeur.tree</field>
        <field name="model">transport.chauffeur</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="numero_permis"/>
                <field name="actif"/>
            </tree>
        </field>
    </record>

    <!-- ====== VUE FORMULAIRE ====== -->
    <record id="view_chauffeur_form" model="ir.ui.view">
        <field name="name">transport.chauffeur.form</field>
        <field name="model">transport.chauffeur</field>
        <field name="arch" type="xml">
            <form string="Chauffeur">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="numero_permis"/>
                        <field name="date_embauche"/>
                        <field name="actif"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
