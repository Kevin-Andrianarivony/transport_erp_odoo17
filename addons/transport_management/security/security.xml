<odoo>
    <record id="module_category_transport" model="ir.module.category">
        <field name="name">Transport</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_transport_route_user" model="res.groups">
        <field name="name">Transport Route User</field>
        <field name="category_id" ref="transport_management.module_category_transport"/>
    </record>

    <record id="group_transport_route_manager" model="res.groups">
        <field name="name">Transport Route Manager</field>
        <field name="category_id" ref="transport_management.module_category_transport"/>
        <field name="implied_ids" eval="[(4, ref('group_transport_route_user'))]"/>
    </record>
</odoo>